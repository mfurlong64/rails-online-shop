!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=0.8"}
    %link{:href => "https://fonts.googleapis.com/css?family=Ubuntu", :rel =>"stylesheet"}
    %title Shoppe
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    %nav
      %ul{:id => "main_bar"}
        %li{:id => "main_title"}
          %h3 Max n Mike's Webshop
        %li{:class => "list_item", :id => "home"}
          =link_to 'Home', products_path
        %li{:class => "list_item", :id => "login"}
          =link_to 'Login', products_path
        %li{:class => "list_item", :id => "Register"}
          =link_to 'Register', products_path
        %li{:class => "list_item", :id => "Logout"}
          =link_to 'Logout', products_path
        %li{:class => "list_item", :id => "browse_categories"}
          =link_to 'Browse Categories', products_path

    = yield

