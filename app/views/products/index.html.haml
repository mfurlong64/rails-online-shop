
%div{:class => "container"}
  - @products.each do |product|
    %div{:class => "product_box"}
      %p{:class => "show_link"}
        =link_to "#{product.name}", product_path(product)
      %br
      = link_to image_tag( "#{product.photo}")
      %div{:class => "price_box"}
        %p="Price: #{number_to_currency(product.price, :unit => "$")}"
        %p
          Current Stock:
          = product.stock
  %p
    =link_to "Log in as an Admin", admins_path
